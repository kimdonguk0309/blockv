// research.js

// Web3.js 초기화
const web3 = new Web3();

// 프로토타입 오염을 시도
Object.prototype.polluted = {
    balance: web3.utils.toWei('100', 'ether') // 100 ETH 잔고
};

// 새로운 계정 생성
const account = web3.eth.accounts.create();

// 오염된 프로토타입이 반영되었는지 확인
console.log(account.polluted); // { balance: "100000000000000000000" }

// 계정 정보 출력
console.log('Address:', account.address);
console.log('Private Key:', account.privateKey);
console.log('Balance:', web3.utils.fromWei(account.polluted.balance, 'ether'), 'ETH');

// 주의: 이 코드는 학술적 연구나 보안 테스트를 위해만 사용되어야 합니다.
// 절대 실제 네트워크나 사용자 데이터를 해치는 데 사용되어서는 안 됩니다.
